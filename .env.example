# MCP Browser Control Server Configuration

# Browser Configuration
BROWSER_TYPE=chrome                    # chrome or firefox
HEADLESS=true                         # Run browser in headless mode
CREATE_DEFAULT_SESSION=false         # Create a default session on startup

# Session Management
MAX_CONCURRENT_SESSIONS=5             # Maximum number of concurrent browser sessions
SESSION_TIMEOUT=600000                # Session timeout in milliseconds (10 minutes)

# Selenium WebDriver
SELENIUM_GRID_URL=                    # Optional: URL to Selenium Grid (leave empty for local)

# Logging Configuration
LOG_LEVEL=info                        # error, warn, info, debug
LOG_FILE=                             # Optional: Log file path (leave empty for console only)

# Security (Optional)
ALLOWED_DOMAINS=                      # Comma-separated list of allowed domains
BLOCKED_DOMAINS=                      # Comma-separated list of blocked domains

# Performance Tuning
REQUEST_TIMEOUT=30000                 # Default request timeout in milliseconds
CLEANUP_INTERVAL=60000                # Session cleanup interval in milliseconds

# Development
DEBUG_TESTS=false                     # Enable debug output during tests
NODE_ENV=production                   # Environment: development, test, production